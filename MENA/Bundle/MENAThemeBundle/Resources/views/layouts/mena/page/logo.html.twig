{% block _logo_widget %}

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-113197938-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-113197938-1');
    </script>

    <meta name="google-site-verification" content="Vcfy42vSHZ7yK2-CEW1PQTGkoYrDNuyZE3cv-8IvNhk" />
    <meta content="Wholesale Prices of Manufacture, Distributors, Traders, Suppliers for GCC &amp; Africa" name="title"/>
    <meta content="Find quality products over the world to get it at your place in GCC and Africa sourced through Manufacturers, Suppliers, Wholesalers, from the UAE, India, China, Turkey, Europe and US." name="description"/>
    {% if app.request.attributes.get('_route') == 'oro_frontend_root' %}
        <img
            src="{% image '@MENAThemeBundle/Resources/public/frontendbundle/images/logo/logo.jpg' %}{{ asset_url }}{% endimage %}"
            class="logo"
            style = "width: 200px; height: 40px;"
            alt="logo"
        >
    {% else %}
        <a href="{{ path('oro_frontend_root') }}" class="logo" style="background: url('{% image '@MENAThemeBundle/Resources/public/frontendbundle/images/logo/logo.jpg' %}{{ asset_url }}{% endimage %}') no-repeat; background-position: center;">TruPar</a>
    {% endif %}
{% endblock %}